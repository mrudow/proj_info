<h1>Listing projects</h1>

<table>
  <tr>
    <th><%= sortable "project_name", "Project Name" %></th>
    <!--th>Client</th -->
    <th><%= sortable "price", "Price"%></th>
    <!-- th>Description</th -->
    <th><%= sortable "responsible_user", "Responsible User"%></th>
    <!-- th>Notes</th -->
    <th><%= sortable "updated_on", "Last Update"%></th>
    <th><%= sortable "work_type", "Work Type"%></th>
    <th><%= sortable "name", "Contact Name"%></th>
    <th><%= sortable "email_address", "Contact Email"%></th>
    <th><%= sortable "status", "Status"%></th>
    <!-- th>Attachment</th-->
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><%= project.project_name %></td>
    <!-- td><%= project.client %></td -->
    <td><%= number_to_currency(project.price) %></td>
    <!-- td><%= project.description %></td -->
    <td><%= project.responsible_user %></td>
    <!-- td><%= project.notes %></td -->
    <td><%= project.updated_on.strftime("%m/%d/%Y") %></td>
    <td><%= Project::WORK_TYPES[project.work_type] =%></td>
    <td><%= project.ci.name %></td>
    <td><%= project.ci.email_address %></td>
    <%#= link_to 'Contact Info', project.ci%>
    <td><%= Project::STATUS[project.status] =%></td>
    <!--td><%= link_to 'Attachment', project.attachment.url %></td -->
    
    <td><%= link_to 'Show', project %></td>
    <td><%= link_to 'Edit', edit_project_path(project) %></td>
    <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

